/* seckill */

.time-list {
  height: 106rpx;
  white-space: nowrap;
  overflow: hidden;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.time-list .line {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  height: 0rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
}

.time-item {
  width: 166rpx;
  height: 106rpx;
  box-sizing: border-box;
  text-align: center;
  color: #9b9b9d;
  display: inline-block;
  position: relative;
}

.time-item .center {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.time-item text {
  display: block;
}

.time-item .triangle {
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  margin-left: -10rpx;
  width: 0rpx;
  height: 0rpx;
  border-bottom: 10rpx solid #fff;
  border-top: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
}

.time-item text:first-of-type {
  font-size: 34rpx;
}

.time-item text:last-of-type {
  font-size: 24rpx;
}

.time-item.active {
  background-color: #f33;
  color: #fff;
}
